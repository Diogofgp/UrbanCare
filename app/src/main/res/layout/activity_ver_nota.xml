<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textoTitle"
        android:layout_width="350dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/manrope_bold"
        android:text="@string/titulo_verNotas"
        android:textColor="@color/ColorLightBlack"
        android:textColorHighlight="@color/header"
        android:textColorLink="@color/header"
        android:textSize="@dimen/_18ssp" />

    <EditText
        android:id="@+id/editar_titulo"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/textoDescricao"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:fontFamily="@font/manrope_bold"
        android:text="@string/descricao_verNotas"
        android:textColor="@color/ColorLightBlack"
        android:textSize="@dimen/_18ssp" />

    <EditText
        android:id="@+id/editar_descricao"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColorHighlight="@color/header"
        android:textColorLink="@color/header" />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="20dp"
        android:text="@string/editar"
        app:backgroundTint="#4f4f57" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:onClick="deleteNota"
        android:text="@string/apagar"
        app:backgroundTint="#4f4f57" />


</LinearLayout>