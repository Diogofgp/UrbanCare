<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcdcdd"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="193dp"
                android:layout_height="195dp"
                android:layout_marginTop="80dp"
                android:layout_gravity="center"
                android:layout_marginBottom="80dp"
                app:srcCompat="@drawable/logo_app" />

            <TextView
                android:id="@+id/nomeUtilizador"
                android:layout_width="161dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:text="@string/nomeUser" />

            <EditText
                android:id="@+id/inserir_nome"
                android:layout_width="195dp"
                android:layout_height="43dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:layout_gravity="center"
                android:inputType="textPersonName"
                android:textColorHighlight="@color/header"
                android:textColorLink="@color/header" />

            <TextView
                android:id="@+id/password"
                android:layout_width="161dp"
                android:layout_gravity="center"
                android:layout_height="25dp"
                android:layout_marginBottom="4dp"
                android:text="Password" />

            <EditText
                android:id="@+id/inserir_pass"
                android:layout_width="191dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginBottom="76dp"
                android:ems="10"
                android:inputType="textPassword"
                android:textColorHighlight="@color/header"
                android:textColorLink="@color/header" />

            <CheckBox
                android:id="@+id/rememberUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-30dp"
                android:layout_marginBottom="20dp"
                android:text="@string/loginSharedPreferences" />

            <Button
                android:id="@+id/login_button"
                android:layout_width="158dp"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:onClick="login"
                android:text="Login"
                app:backgroundTint="#4f4f57" />

            <Button
                android:id="@+id/consultar_notas"
                android:layout_width="163dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:onClick="moverParaNotas"
                android:text="@string/notas"
                app:backgroundTint="#4f4f57
        " />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>